{
  "name": "rtlamr to MQTT",
  "version": "0.4",
  "slug": "rtlamr2mqtt",
  "description": "Read utility meters using rtl-sdr and rtlamr and send via MQTT",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "i386"
  ],
  "url": "https://github.com/avidit/hassio-addons",
  "startup": "application",
  "boot": "auto",
  "init": false,
  "host_network": false,
  "map": [
    "config:rw",
    "ssl"
  ],
  "usb": true,
  "options": {
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "mosquitto",
    "mqtt_pass": "mosquitto",
    "msg_types": "scm",
    "meter_ids": "1234",
    "sleep": "30m"
  },
  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_pass": "str",
    "msg_types": "str",
    "meter_ids": "str",
    "sleep": "str"
  }
}
